{
  "compilerOptions": {
  "module": "commonjs",
  "esModuleInterop": true,
  "lib": [
    "ESNext",
    "DOM"
  ],
  "typeRoots": [
    "src/@types"
  ],
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
  "target": "es6",
  "noImplicitAny": true,
  "moduleResolution": "node",
  "sourceMap": true,
  "outDir": "dist",
  "baseUrl": ".",
  "strict": false,
  "allowSyntheticDefaultImports": true,
  "declaration": true,
  "declarationMap": true,
  "jsx": "react-native",
  "skipLibCheck": true,
  "paths": {
  "*": [
    "node_modules/*"
  ]
  }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}